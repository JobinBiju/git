@charset "utf-8";
/* CSS Document */
*{ padding:0px; margin:0px; list-style:none;}
body{font-family:"微软雅黑",Arial, Helvetica, sans-serif; color:#151515;}
a{ text-decoration:none;}

.activ01{ background:url(../../images/activity/topbg01.jpg) 50% 0px no-repeat #e4f5ff; padding-top:56px; padding-bottom:20px;margin-bottom: 100px;}
.activ02{ background:url(../../images/activity/topbg02.jpg) 50% 0px no-repeat #fffae5; padding-top:56px; padding-bottom:20px;margin-bottom: 100px;}
.activ03{ background:url(../../images/activity/topbg02.jpg) 50% 0px no-repeat #fffae5; padding-top:56px; padding-bottom:20px;margin-bottom: 100px;}

.actab{width:914px; height:69px; margin:0px auto;}
.actab a{width:186px; height:69px; display:block; float:left; background:url(../../images/activity/hdtab.png) no-repeat; margin-right:15px;}
.activ01 .actab a.dq,.activ01 .actab a.dq:hover{ background-position:left 0px;}
.activ01 .actab a.yq{ background-position:right -138px;}

.activ01 .actab a.yq2{ background:url(../../images/activity/whdtab.png) ; background-position:right -138px;}



.activ02 .actab a.dq,.activ03 .actab a.dq{ background-position:left -138px;}
.activ02 .actab a.dq:hover,.activ03 .actab a.dq:hover{ background-position:left -69px;}
.activ02 .actab a.yq,.activ02 .actab a.yq:hover{ background-position:right 0px;}

.activ02 .actab a.yq2,.activ02 .actab a.yq2:hover{ background:url(../../images/activity/whdtab.png) ; background-position:right -69px;}

.dbtop{ height:12px; font-size:0px; line-height:0px; width:1000px; margin:10px auto 0px auto;}
.dbbom{ height:12px; font-size:0px; line-height:0px; width:1000px; margin:0px auto 20px auto;}
.dbmid{ width:900px; padding:0px 49px; margin:0px auto; background:#fff; padding-top:25px;}
.activ01 .dbtop{background:url(../images/activity/db_01.jpg) 0px 0px;}
.activ01 .dbbom{background:url(../images/activity/db_01.jpg) 0px -12px;}
.activ01 .dbmid{border:1px #8fc7ea solid;}
.activ02 .dbtop,.activ03 .dbtop{background:url(../images/activity/db_02.jpg) 0px 0px;}
.activ02 .dbbom,.activ03 .dbbom{background:url(../images/activity/db_02.jpg) 0px -12px;}
.activ02 .dbmid,.activ03 .dbmid{border:1px #ffd1a4 solid;}
.actad{padding-bottom:25px; border-bottom:1px #ddd dashed; margin-bottom:25px;}
.actt{height:30px; line-height:30px; font-size:16px; font-style:italic; color:#151515;}
.actt span{cursor:pointer; font-size:24px; font-style:normal;}
.actad p{font-size:14px; font-family:Arial, Helvetica, sans-serif; height:30px; line-height:30px; margin-bottom:5px;}
.activ01 .actad p span{ color:#25bef7;}
.activ02 .actad p span{ color:#ff7800;}
.nomar{margin-bottom:0px; border-bottom:0px;}
.activ01 a:hover{ color:#00a0dc;}
.activ02 a:hover{ color:#dc5300;}
a.nodq{background:url(../../images/activity/hdtab01.jpg) no-repeat;background-position:left 0px;}
a.noyq{background:url(../../images/activity/hdtab02.jpg) no-repeat;background-position:left 0px;}
a.noyq2{background:url(../../images/activity/wqhdtab02.png) no-repeat;background-position:left 0px;}
.activ03 .actab a.yq,.activ03 .actab a.yq:hover{ background-position:right -69px;}
.activ03 .actab a.yq2,.activ03 .actab a.yq2:hover{ background:url(../../images/activity/whdtab.png) ; background-position:right -0px;}

.activ03{display:none;margin-bottom:100px;}
.activ01 .dbmid,.activ03 .dbmid{position:relative;}
.c_activity_in{position:absolute;top:-5px;right:-9px;}

.y_PageNums li{cursor:pointer;margin-left:7px;float: left;width: 30px;height: 30px;border: 1px solid #dddddd;line-height: 30px;text-align: center;color: #545454;font-size: 14px;border-radius: 2px;}
.y_details_con2right .y_PageNums li{width: 20px;height: 20px;line-height: 20px;font-size: 12px;}
.y_PageNums li.y_previousPage,.y_PageNums li.y_nextPage{width: 70px;height: 30px;border:1px solid #00a9e9;}
.y_details_con2right .y_PageNums li.y_previousPage,.y_details_con2right .y_PageNums li.y_nextPage{width: 50px;height: 20px;border:1px solid #00a9e9;}
.y_PageNums{margin: 60px auto;overflow: hidden;width: 392px;}
.y_details_con2right .y_PageNums{margin-top:30px;}
.y_PageNums li.y_previousPage:hover,.y_PageNums li.y_nextPage:hover{color: #00a9e9;}
.y_PageNums li.y_PageNumsclick{color: #fff;background-color: #00a9e9;}