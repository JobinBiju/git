@charset "utf-8";
@import url(comm.css);
body{font-family:microsoft Yahei;min-width: 1000px;}
.clear{clear:both;}
.banner{width:100%;cursor: pointer;}
.banner_one{background:url(../../images/subject/questions/bg_01.jpg) no-repeat center 0;width:100%;height:285px;}
.banner_two{background:url(../../images/subject/questions/bg_02.jpg) no-repeat center 0;width:100%;height:355px;position: relative;}
.banner_three{background:url(../../images/subject/questions/bg_03.jpg) no-repeat center 0;width:100%;height:274px;position: relative;}
.heart{position: absolute;right:50%;top:0px;margin-right:-208px;}
.plane{position: absolute;left:50%;bottom:0px;margin-left:-292px;}
.start{position: absolute;top:0px;right:50%;margin-right:-386px;color:#fff;font-size:29px;display:block;width:224px;height:64px;text-align: center;line-height:64px;}
.questions_block{background:url(../../images/subject/questions/bg_04.jpg) no-repeat center 0;width:100%;height:525px;}
.questions_con{width:1000px;margin:0px auto;padding-top:40px;position: relative;}
.questions_details{background:url(../../images/subject/questions/icon_11.png) no-repeat center;height:398px;width:971px;margin:0px auto;}
.questions_details h3{text-align: center;padding-top:24px;color:#fff;font-size:29px;}
.questions_details .text_right{color:#f54c51;font-size:21px;text-align: right;line-height:30px;margin:18px 56px 4px 0px;}
.text_right span{margin-left:50px;}
.questions_title{float:left;font-size:17px;color:#fff6f6;display:block;width:88px;height:32px;margin-left:52px;line-height:32px;text-align: center;}
.title{float:left;width:778px;}
.title p{color:#1f1e1e;font-size:20px;margin:8px 14px 0px;}
.title li{width:194px;float:left;color:#1f1e1e;font-size:20px;margin-top:22px;}
.title li span,.title li.add_new_color{color:#f54c51;}
.title .add_bg{text-align: center;background:url(../../images/subject/questions/btn_03.jpg) no-repeat left center;width:101px;height:36px;line-height:36px;color:#fff;font-size:22px;text-shadow:1px 1px 0px #fd7e0d;margin-right:93px;cursor: pointer; }
.title .add_newbg{background:url(../../images/subject/questions/btn.jpg) no-repeat left center;}
.add_bg:hover{background:url(../../images/subject/questions/btn.jpg) no-repeat left center;}
.w_btn{display:block;width:228px;height:58px;margin:25px auto 0px;background:url(../../images/subject/questions/choose_03.png) no-repeat left center;cursor: pointer;}
.ture{display:none;position: absolute;top:0px;left:0px;width:100%;height:100%;text-align: center;}
.ture img{width:265px;height:200px;margin-top:130px;}
.wrong{display:none;position: absolute;top:0px;left:0px;width:100%;height:100%;text-align: center;}
.wrong img{width:345px;height:234px;margin-top:130px;}
.rules_block{background:url(../../images/subject/questions/bg_05.jpg) no-repeat center 0;width:100%;height:414px;}
.rules_con{width:980px;padding:0px 10px;margin:0px auto;}
.rules_right,.rules_left{float:left;}
.rules_left img{width:98px;height:111px;}
.rules_right ul{padding-left:30px;}
.rules_right li{font-size:16px;color:#314d48;line-height:26px;}
.w_last{margin-top:40px;}
.last_btn{display:block;width:253px;height:53px;margin:80px auto 0;text-align:center;font-size:21px;color:#ffda65;line-height:46px;background:url(../../images/subject/questions/btn.png) no-repeat 0px -94px;}
.last_btn:hover{background-position:-405px -94px;}
.window{background:url(../../images/subject/questions/red.png) no-repeat;width:461px;height:390px;position: fixed;top:20px;left:50%;z-index: 50;margin-left:-230px;}
.window h2{color:#fffba5;font-size:34px;text-align: center;padding-top:16px;text-shadow: 3px 3px 1px #ba3433;-o-text-shadow: 3px 3px 1px #ba3433;-webkit-text-shadow: 3px 3px 1px #ba3433;-moz-text-shadow: 3px 3px 1px #ba3433;-ms-text-shadow: 3px 3px 1px #ba3433;}
.window p{color:#fffba5;font-size:24px;margin-left:46px;text-shadow: 3px 3px 1px #ba3433;-o-text-shadow: 3px 3px 1px #ba3433;-webkit-text-shadow: 3px 3px 1px #ba3433;-moz-text-shadow: 3px 3px 1px #ba3433;-ms-text-shadow: 3px 3px 1px #ba3433;}
.window .money{font-size:68px;margin:0px;padding:0px;}
.window .red_box{font-size:39px;text-align: center;margin:0px;}
.popup_btn{background:url(../../images/subject/questions/btn.png) no-repeat;display:block;width:298px;height:76px;position: absolute;bottom:0px;left:81px;}
.popup_btn:hover{background-position:-403px 1px;}
.window .w_close{background:url(../../images/subject/questions/close.png) no-repeat left center;display:block;width:21px;height:21px;position: absolute;right:30px;top:6px;cursor: pointer;}

.w_add_bg{background:#000;filter:alpha(opacity=50);   
      -moz-opacity:0.5;   
      -khtml-opacity: 0.5;   
      opacity: 0.5;width:100%;height:500px;position: absolute;top:0px;left:0px;z-index:20;display:none;}
.window {display:none;}
.window .wrong_tips{text-align: center;font-size:33px;margin:0px;margin-top:70px;}


.title{position: relative;height:178px;width:778px;overflow:hidden;}
.float_box{padding-top:113px;}
.title .new_tips{font-size:16px;color:#f54c51;margin:0px;margin-top:15px;position: absolute;bottom:0px;left:0px;}
.w_btn_other{display:block;width:224px;height:53px;margin:25px auto 0px;background:url(../../images/subject/questions/login_03.png) no-repeat left center;cursor: pointer;}
.w_btn_new{display:block;width:224px;height:53px;margin:25px auto 0px;background:url(../../images/subject/questions/wan_03.png) no-repeat left center;cursor: pointer;}
.text_right_other{padding-top:79px;}
.title .new_tips a{color:#4b47e5;font-size:16px;}