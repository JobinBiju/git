@charset "utf-8";
@import url(comm.css);
*{margin:0;padding:0;font-family:microsoft Yahei;list-style:none;}
.y_plat_notice {
	width: 880px;
	border: 1px solid #e0e0e0;
	padding: 0 59px;
	margin: 51px auto 70px;
	padding-bottom:120px;
}

.y_notice_list li {
	padding: 49px 0 72px;
	overflow: hidden;
	border-top: 1px solid #e0e0e0;
}

.y_notice_list li.noborder {
	border: none;
}

.y_notice_list li img {
	padding: 3px;
	border: 1px solid #e4e4e4;
	float: left;
	width:306px;
	height:176px;
}

.y_notice_list li h1 {
	color: #12adff;
	font-size: 18px;
	line-height: 40px;
	width: 378px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	font-weight: normal;
	margin-bottom: 7px;
}

.y_notice_list li .y_notice_listliright {
	margin-left: 44px;
	float: left;
	width: 522px;
}

.y_notice_list li .y_notice_listliright p {
	line-height: 26px;
	font-size: 14px;
	color: #555555;
}

.y_notice_list li .y_notice_listliright .y_notice_listlirightas {
	display: inline-block;
	width: 85px;
	height: 28px;
	background: #12adff;
	color: #fff;
	font-size: 14px;
	line-height: 28px;
	text-align: center;
	margin-top: 20px;
}

.y_notice_list li .y_notice_listliright span {
	color: #888;
	font-size: 12px;
	line-height: 28px;
	text-align: center;
	margin-top: 20px;
	margin-left: 250px;
}
.c_plat_detail{min-height:672px;width: 720px;border: 1px solid #e0e0e0;padding: 0 139px;margin: 51px auto 70px;padding-bottom:40px;}
.c_plat_detail h1{ color: #12adff;font-size: 18px;font-weight: normal; line-height: 78px;margin-top: 20px; overflow: hidden;text-align: center;text-overflow: ellipsis; white-space: nowrap}
.c_plat_detail .y_plat_noticetime{color: #888888;display: block;font-size: 12px;line-height: 14px;margin-bottom: 24px; text-align: center; width: 100%;}
.c_article{min-height:300px;text-indent:2em;line-height:28px;color:#555;}
.c_plat_detail .pageTurning{background: none repeat scroll 0 0 #12adff;color: #fff;display: inline-block;font-size: 14px;height: 30px;line-height: 30px;margin-bottom: 51px;margin-left: 397px;margin-top: 55px; text-align: center;width: 85px;}
.c_plat_detail .pageTurning a{color:#fff;}
.c_article_piece{line-height:30px;}
.c_article_piece p a:hover{color:#12ADFF;}