<script>

$(document).ready(function() { 
	$(".y_deal_statesul li").find("input").prop("checked",true);
}); 

function check(){
	if(!($(".y_deal_statesul li").hasClass("y_bid_click"))){
		alerts("提示",$(".bigboxp").html(),"300","200");
		$(".y_alertsBoxCon span").click(function(){
		 	$(".alertsBox").hide();
			$(".alertsbg").hide(); 
		})
		return false;
	}
	var amortize = document.getElementsByName("productEnable");

	if(((parseInt($(".textnull").val())<100||($(".textnull").val()==""))&& 
			(amortize[0].value == 1||amortize[1].value == 1||amortize[2].value == 1))){	
		alerts("提示",$(".bigboxAccount").html(),"300","200");
		$(".y_alertsBoxCon span").click(function(){
