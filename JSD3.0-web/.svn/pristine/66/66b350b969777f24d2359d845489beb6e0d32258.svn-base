@charset "utf-8";
*{margin:0;padding:0;font-weight:normal;list-style:none;}
img{border:none;}
a{text-decoration:none;color:#333;}
body{min-width:1150px;font-size:14px;font-family:"微软雅黑";position:relative;}
.school_info{margin-top:10px;}
.school_info label,.school_info input{float:left;}
.school_info label,.sjld label{width:90px;text-align:right;display:block;height:30px;line-height:30px;margin-right:10px;}
.school_info input{width:240px;border-style:none;border:1px solid #ccc;height:20px;padding:4px 5px;}
.sjld label{height:40px;line-height:50px;}
.school_apply{background:#fadd68;height:838px;}
.apply_content,.angle_content,.require_content,.join_content{width:1150px;margin:0 auto;}
.school_angle{background:#caf4bd;height:654px;}
.recruit_require{background:#f3edc2;height:654px;}
.quick_join{background:#99b4de;height:654px;}
.apply_content{height:100%;background: url(../../images/school/one.jpg) no-repeat 0 100px;}
.angle_content{height:100%;background:url(../../images/school/two.jpg) no-repeat 102px 146px;position:relative;}
.angle_content h2,.require_content h2,.join_content h2{padding-top:58px;text-align:center;color:#be8212;font-size:40px;}
.angle_star{position:absolute;left:30px;top:58px;width:62px;height:197px;background:url(../../images/school/star.png) no-repeat;}
.require_content h2{color:#556b53;}
.join_content h2{color:#556b53;padding-top:106px;}
.require_content{height:100%;background: url(../../images/school/three.jpg) no-repeat 84px 146px;}
.join_content{height:100%;background: url(../../images/school/four.jpg) no-repeat 174px 190px;}
.angle_text{padding-left:590px;margin-top:134px;}
.angle_text li{line-height:49px;font-size:16px;color:#c07b02;}
.require_text{padding-left:456px;margin-top:141px;}
.require_text li{color:#fff;line-height:60px;}

.inline_order {
height: auto;
width: 415px;
margin: -143px 0 0 -208px;
border: 5px solid black;
left: 50%;
top: 50%;
background: #fff;
text-align: center;
position: fixed;
overflow: hidden;
display:none;
}
.yuyue_tou {
background-color: #ECECEC;
height: 40px;
font-size: 20px;
line-height: 40px;
color: #666666;
text-align: left;
padding-left: 20px;
}
input[type="hidden"] {
display: none!important;
}
table {
border-collapse: collapse;
border-spacing: 0;

}
.num {
color: #666;
margin-top: 50px;
}
.salecar-table1 tr td {
text-align: left;
}
.city_selected select {
width: 254px;
height: 30px;
margin-bottom: 10px;
color: #000;
font-size: 14px;
font-family: "微软雅黑";
}
.salecar-table1 tr td.right {
padding-right: 5px;
}
.num input {
height: 26px;
}
.sub input {
width: 160px;
height: 41px;
border-radius: 2px;
border: 0;
margin-top: 0px;
background: #ED2200;
color: #fff;
font-size: 16px;
line-height: 40px;
font-family: "微软雅黑";
}
.yuyue_tou {
background-color: #ECECEC;
height: 40px;
font-size: 20px;
line-height: 40px;
color: #666666;
text-align: left;
padding-left: 20px;
}
.reg_small_btn {
font-size: 14px;
background: #eee;
color: #666;
width: 140px;
height: 30px;
border: 1px solid #ccc;
margin-left: 10px;
font-family: "微软雅黑";
}
.sign_up{display:block;width:362px;height:92px;}
.se_list{
	background:#fff;
	border:1px solid #E0E0E0;
	box-shadow:0 0 3px -1px #CCC;
	-webkit-box-shadow:0 0 3px -1px #CCC;
	position:absolute;
	top:60px;
	width:120px;
	padding:10px;
}
.list_arrow{
	display:block;
	width:9px;
	height:5px;
	background:url('../images/nav-angle-up.png') no-repeat;
	position:absolute;
	top:-5px;
	left:60px;
}
.se_list li a{
    display:block;
	height:24px;
	width:120px;
	font-size:14px;
}
.se_list li a:hover{
	background:#ABADB3;
	color:#fff;
}
.leftLabel{
	width:132px;
	text-align:right;
	display:inline-block;
	margin-right:46px;
}
.common{
	height:40px;
	line-height:40px;
}
.common input,.common .sel,.loan_type{
	width:270px;
	height:20px;
	padding:4px 5px;
	border-style: none;
	border: 1px solid #ABADB3;
}
.common .sel,.common .sely,.common .ca_sely,.common .cas_sely,.common .selys{
	display:inline-block;
	border:1px solid #ABADB3;
	float:left;
	margin-top: 6px;
	height: 20px;
	line-height: 20px;
	width: 242px;
	position:absolute;
	background:rgba(0,0,0,0);
	filter:progid:DXImageTransform.Microsoft.Alpha(style=0,opacity=80)/*IE*/
	-MS-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";   /*IE8*/
	filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=80);     /*IE5~7*/
	z-index:3;
}
.loans,.dates{
	width:253px;display:inline-block;float:left;position:relative;
}
.loan_type,.loan_typey,.ca_typey,.cas_typey,.loans_typey{
	position:absolute;
	background:#fff;
	height:160px;
	width:242px;
	border:1px solid #A9A9A9;
	top:35px;
	z-index:4;
	overflow:auto;
}
.loan_type li,.loan_typey li,.ca_typey li,.cas_typey li,.loans_typey li{
	line-height:28px;
}
.loan_type li:hover,.loan_typey li:hover,.ca_typey li:hover,.cas_typey li:hover,.loans_typey li:hover{
	background:#eee;
	cursor:pointer;
}
.se_li,.ca_liy,.se_liy,.cas_liy,.ses_liy{
	display:block;
	position:absolute;
	overflow:hidden;
	right:0;
	top:6px;
	width:19px;
	height:29px;
	margin-right:0;
	background:url('../../images/school/sel_red.png');
	z-index:0;
}
.loanTitle{
	margin-top:20px;
}


