<script>
    $(function () {
            $(".y_que_list dl h4").click(function(){
        if($(this).next().css("display")=="none"){
            $(".y_que_list dl .y_hide_dd").slideUp("fast");
            $(".y_que_list dl h4 span").css({backgroundPosition:"0 0"});
            $(this).next().slideDown("fast");
            $(this).children("span").css({backgroundPosition:"0 -20px"});   
        }else{
            $(this).next().slideUp("fast");
            $(this).children("span").css({backgroundPosition:"0 0"});
        }           
    })

    })
</script>
