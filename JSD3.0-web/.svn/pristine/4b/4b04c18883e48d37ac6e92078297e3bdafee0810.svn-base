@charset "utf-8";
@import url(comm.css);
body{min-width: 1204px;_width:expression(document.documentElement.clientWidth>1204?document.documentElement.clientWidth:1204);font-family: "微软雅黑";}
/*banner  start*/
.y_lotterybanner{width: 100%;height: 664px;background: url(../../images/lottery/lotterybanner.jpg) no-repeat center 0;}
.y_lotterybannerin{width: 1204px;margin: 0 auto;position: relative;overflow:hidden;height:664px;}
/*banner left*/
.lotterybannerleft{width: 231px;height: 526px;background: #a00001;border-radius: 3px;padding: 5px 15px 0;top:0;position: absolute;left: 0;color: #fefefe;font-size: 14px;line-height: 48px;}
.lotterybannerleftin{position: relative;}
.lotterybannerleftin .ul2{position: absolute;top:0; left: 0;}
.lotterybannerleftin .ul2 li{border-bottom: 1px dashed #964d4e;height: 47px;}
.lotterybannerleftin li{height: 48px;width: 231px;overflow: hidden;}
.lotterybannerleftin{overflow: hidden;height: 479px;}
.lotterybannerleftin li .bannerspanl{float: left;display: block;width: 96px;padding-left: 7px;height: 48px;}
.lotterybannerleftin li .bannerspanr{float: left;display: block;width: 128px;height: 48px;}
.lotterybannerleft h2{font-size: 20px;color: #fefefe;text-align: center;line-height: 46px;}
/*banner center*/
.lotterybannercenter{width: 571px;height: 323px;position: absolute;left: 280px;top: 110px;}
.lotterybannercenterin{width: 280px;position: absolute;left: 151px;top: 75px;height: 202px;overflow: hidden;}
.lotterybannercenterin ul{width: 56px;float: left;margin-right: 52px;}
.lotterybannercenterin ul.cneterul3{margin-right:0;}
.lotterybannercenterin li{width: 56px;height: 53px;padding: 8px 0;}

/*banner right*/
.lotterybannerright{position: absolute;top: 143px;right: -20px;width: 310px;height: 316px;background: url(../../images/lottery/icon1s.png) no-repeat 0 -572px;padding: 25px 17px;}
.lotterybannerrightTitle{color: #fff;font-size: 20px;text-align: center;line-height: 44px;margin-top: 14px;}
.lotterybannerrightspan{line-height: 26px;color: #ffffff;font-size: 14px;text-align: center;display: block;}
.lotterybannerrightspan em{font-style: normal;}
.bannerrightimg{width: 310px;height: 135px;}
.bannerrightimg1{background: url(../../images/lottery/icon1s.png) no-repeat 0 -33px;}
.bannerrightimg2{background: url(../../images/lottery/icon1s.png) no-repeat 0 -236px;margin-top: 16px;}
.InstantLottery,.Nowinvest,.NowInvite,.InstantLottery2{cursor: pointer;width: 132px;height: 39px;display: block;background: url(../../images/lottery/icon1s.png) no-repeat 0 -400px;margin: 0 auto;}
.Nowinvest{background-position: 0 -480px;margin-bottom: 70px; margin-top: 60px;}
.NowInvite{background-position: 0 -520px;margin-top:28px;margin-bottom: 50px;}
.InstantLottery2{background-position: 0 -440px;}
.Lotteryhint{color: #ffffff;font-size: 14px;text-align: center;line-height: 28px;}
/*banner  end*/
.y_lotterycenter{width: 1074px;margin: 0 auto 58px;position: relative;overflow: hidden;padding-left: 130px;}
.y_lotterycenter ul{width: 475px;float: left;}
.y_lotterycenter ul li{font-weight: bold;font-size: 20px;color: #333333;margin-bottom: 23px;}
.y_lotterycenter img{width: 46px;position: relative;top: 15px;margin-right: 26px;}
.y_lotterycenter ul li span{margin-right: 21px;}
.y_lotterycenter ul li em{font-style: normal;}
.y_alertsBoxCon{text-align:center;}
.y_alertsBoxCon span {display: block;width: 86px;height: 32px;color: #fff;text-align: center;line-height: 32px;cursor: pointer;border-radius: 2px;position: absolute;top: 136px;right: 110px;background: #0697da;font-size: 14px;}
.y_alertsBoxCon a {display: block;width: 86px;height: 32px;color: #fff;text-align: center;line-height: 32px;cursor: pointer;border-radius: 2px;position: absolute;top: 136px;right: 110px;background: #0697da;font-size: 14px;}