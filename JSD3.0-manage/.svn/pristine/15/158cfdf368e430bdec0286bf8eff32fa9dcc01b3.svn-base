<script type="text/javascript">
    $(function() {
        $('#creditLogListGrid').datagrid({
            url : '/modules/creditassignment/creditlog/creditLogDetail.html?caId=${id}',
            fit : true,
            fitColumns : true,
            border : false,
            pagination : true,
            idField : 'id',
            pageSize : 10,
            pageNums :1,
            pageList : [ 10, 20, 30, 40, 50 ],
            sortName : 'id',
            sortOrder : 'asc',
            columns : [ [
              { field: 'buyUserName', title: '购买人', width: 100, sortable:false },
              { field: 'buyAccount', title: '认购金额', width: 100, sortable:false,formatter:function(value,row,index){
            	  return value+"元";
              }},  
              { field: 'buyCopies', title: '购买份数', width: 80,fixed:true, sortable:false }, 
              { field: 'buyFee', title: '认购手续费', width: 80, sortable:false,formatter:function(value,row,index){
            	  return value+"元";
              }},
              { field: 'buyFeeStatus', title: '认购手续费状态', width: 100,fixed:true, sortable:false,formatter: function(value,row,index){
            	  if(value ==1){
            		  return "已收取"; 
            	  }else if(value==2){
            		  return "冻结中";
            	  }else if(value ==3){
            		  return "已退回";
            	  }else{
            		  return "未指定的状态";  
            	  }
              } }, 
              { field: 'addTime', title: '添加时间', width: 150, sortable:false,fixed:true,formatter: function(value,row,index){
            	  return getLocalTime(value,4);
              	} 
              }, 
              { field: 'addIp', title: '添加IP', width: 120, sortable:false }
             ]]
        }); 
        
    });
</script>

<table id="creditLogListGrid"></table>

