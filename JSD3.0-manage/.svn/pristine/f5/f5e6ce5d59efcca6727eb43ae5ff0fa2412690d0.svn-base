<script type="text/javascript">
    $.fn.dataGridOptions.formSubFun("#form",'/modules/user/user/certification/certificationEdit.html');	
</script>
<form id="form"  method="post">
<div class="popForm sForm">
	<div class="formitm">
		<label class="lab">用户名：</label>
		<div class="ipt">
		    ${attestation.user.userName!}
		</div>
	</div>
	<div class="formitm">
		<label class="lab">真实姓名：</label>
		<div class="ipt">
		    ${attestation.user.realName!}
		</div>
	</div>
	<div class="formitm">
		<label class="lab">资料类型：</label>
		<div class="ipt">
		    ${attestation.attestationType.name!}
		</div>
	</div>
	<div class="formitm">
		<label class="lab">资料图片：</label>
		<div class="ipt">
		    <img src="${weburl}${attestation.picPath!}" title="${attestation.attestationType.name!}" alt="${attestation.attestationType.name!}"/> 
		</div>
	</div>
	<div class="formitm">
		<label class="lab">备注：</label>
		<div class="ipt">
		     ${attestation.name!}
		</div>
	</div>
	<div class="formitm">
		<label class="lab">状态：</label>
		<div class="ipt">
		    <input type="radio" name="status" value="1" checked="checked"/>&nbsp;&nbsp;审核通过  
			<input type="radio" name="status" value="2"/>&nbsp;&nbsp;审核未通过
		</div>
	</div>
	<div class="formitm">
		<label class="lab">审核说明：</label>
		<div class="ipt">
		    <textarea  name="verifyRemark" class="w300"></textarea>	
		</div>
	</div>	
</div>
<input type="hidden" name="id" value="${attestation.id!}">
</form>