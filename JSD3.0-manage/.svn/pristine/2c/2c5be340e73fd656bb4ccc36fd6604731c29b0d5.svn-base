<script type="text/javascript">
	$(function() {
	    $.fn.dataGridOptions.formSubFun("#form",'/modules/loan/borrow/delayBorrowShow.html');		
	});
</script>

<div class="popShow">
	<div class="showItem">
		<span>借款人：</span>
		${borrowUser}
	</div>
	<div class="showItem">
		<span>状态：</span>
		招标中
	</div>
	<div class="showItem">
		<span>借款用途：</span>
		${borrow.borrowUse!}
<!-- 		<@linkage plantext='plantext' nid="borrow_use"/>
		<@linkage plantext='plantext'  nid="borrow_use" /> -->
	</div>
	<div class="showItem">
		<span>借款期限：</span>
		<#if borrow.borrowTimeType==1>${borrow.timeLimit!"-"} 天<#else>${borrow.timeLimit!"-"} 个月</#if>
	</div>
	<div class="showItem">
		<span>进度：</span>
		${borrow.scales}%
	</div>
	<div class="showItem">
		<span>还款方式：</span>
		<@linkage plantext='plantext' default=borrow.style nid="borrow_style"/>
	</div>
	<div class="showItem">
		<span>借贷总金额：</span>
		${borrow.account}元
	</div>
	<div class="showItem">
		<span>年利率：</span>
		${borrow.apr}%
	</div>
	<#if borrow.type!=110>
	<div class="showItem">
		<span>最低投标金额：</span>
		<#if borrow.lowestAccount??&&borrow.lowestAccount?number gt 0>${borrow.lowestAccount}元<#else>无限制</#if>
	</div>
	<div class="showItem">
		<span>最多投标总额：</span>
		<#if borrow.mostAccount??&&borrow.mostAccount?number gt 0>${borrow.mostAccount}元<#else>无限制</#if>
	</div>
	<#else>
	<div class="showItem">
		<span>单笔最低投标金额：</span>
		<#if borrow.lowestSingleLimit??&&(borrow.lowestSingleLimit?c)?number gt 0>${borrow.lowestSingleLimit}元<#else>无限制</#if>
	</div>
	<div class="showItem">
		<span>单笔最多投标总额：</span>
		<#if borrow.mostSingleLimit??&&(borrow.mostSingleLimit?c)?number gt 0>${borrow.mostSingleLimit}元<#else>无限制</#if>
	</div>
	</#if>
	<div class="showItem">
		<span>有效时间：</span>
		${borrow.validTime}天
	</div>
	<div class="showItem">
		<span>定时时间：</span>
		<#if borrow.fixedTime??>${borrow.fixedTime?string("yyyy-MM-dd HH:mm:ss")}</#if>
	</div>
</div>
	<div class="borrowForm">
		<form id="form" method="post">
			<ul style="margin-left:40px"><li><span>延长时间：</span><@linkage name="validTime" id="valid_time" nid="borrow_valid_time" type="value"   class="borrowFormTxt J_input"/></li></ul>
			<input type="hidden" value="${borrow.id}" name="id">
			<input type="hidden" value="${delayBorrowShowToken!}" name="delayBorrowShowToken">
		</form>
	</div>
