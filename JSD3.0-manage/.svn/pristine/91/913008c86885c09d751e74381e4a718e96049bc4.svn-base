<script src="/plugins/laydate-v1.1/laydate.js"></script>
<script src="/themes/theme_default/js/date.js"></script>
<script type="text/javascript">
$(function(){
	
	// 图片大小限制提示
	$('#imgSize').html('建议大小：(720 * 360)');
	
    $.fn.dataGridOptions.formSubFun("#form",'/modules/phone/scrollPic/scrollPicEdit.html'); //表单提交  参数1：表单id 参数2：表单action地址
});
</script>

<div class="popForm">
    <form id="form"  method="post" enctype="multipart/form-data">
    	<div class="formitm">
		     <label class="lab">名称：</label>
		     <div class="ipt">
		     	<!-- <input type="text" id="name" class="w400 easyui-validatebox" name="name" value="手机轮展图" readonly="readonly">
		     	<b>*</b> -->
		     	手机轮展图
		     </div>
		</div>
		
		<!-- 添加时间开始 -->
		<div class="formitm">
		     <label class="lab">开始时间：</label>
		     <div class="ipt">
		     	<input type="text" class="dateInput w200 easyui-validatebox" name="onlineTime" id="startTime"  value="${phoneScrollPic.onlineTime?string('yyyy-MM-dd HH:mm:ss')}" data-options="required: true"/>
		     	<b>*</b>
		     	&nbsp;
		     	结束时间：<input type="text" class="dateInput w200 easyui-validatebox" name="nolineTime" id="endTime"   value="${phoneScrollPic.nolineTime?string('yyyy-MM-dd HH:mm:ss')}" data-options="required: true"/>
		     	<b>*</b>
		     </div>
		</div>
		<!-- 添加时间结束 -->
		
		<div class="formitm">
		     <label class="lab">标题：</label>
		     <div class="ipt">
		     	<input type="text" name="title" value="${phoneScrollPic.title}" class="w400 easyui-validatebox" data-options="required: true" maxlength="50"/>
		     	<b>*</b>
		     </div>
		</div>
		<div class="formitm">
		     <label class="lab">状态：</label>
		     <div class="ipt">
		     	<input type="radio" name="status" value="1" <#if phoneScrollPic.status?? && phoneScrollPic.status ==1>checked="checked"</#if>/>&nbsp;&nbsp;显示
		     	<input type="radio" name="status" value="2" <#if phoneScrollPic.status?? && phoneScrollPic.status ==2>checked="checked"</#if>/>&nbsp;&nbsp;隐藏
				
		     </div>
		</div>
		<div class="formitm">
		     <label class="lab">排序：</label>
		     <div class="ipt">
		     	<input type="text" name="sort" value="${phoneScrollPic.sort}" class="easyui-numberbox" data-options="required: true" maxlength="4"/>
		     	<b>*</b>
		     </div>
		</div>
	
		<div class="formitm">
		     <label class="lab">图片：</label>
		     <div class="ipt">
		     	<input type="file" name="file">	<br /><a id="imgSize"></a>
		     </div>
		</div>
		<div class="formitm">
		     <div class="ipt">
		     	<a href="${phoneScrollPic.picPath!}" class="fileshow"  rel="group1"  ondragstart="return false"><img src="${phoneScrollPic.picPath!}" title="点击预览"></a>
		     </div>
		</div>
		<div class="formitm">
		     <label class="lab">链接：</label>
		     <div class="ipt">
				<input type="text" name="linkPath" value="${phoneScrollPic.linkPath!}" class="w400 easyui-validatebox" maxlength="128" data-options="required: true" />
			 </div>
		</div>
		<div class="formitm">
		     <label class="lab">简介：</label>
		     <div class="ipt">
		     	<textarea class="w400 easyui-validatebox" name="introduction"  maxlength="250">${phoneScrollPic.introduction!}</textarea>	
		     </div>
		</div>
		<div class="formitm">
		     <label class="lab">添加人：</label>
		     <div class="ipt">
		     	${phoneScrollPic.addUser!}
		     </div>
		</div>
		<div class="formitm">
		     <label class="lab">添加时间：</label>
		     <div class="ipt">
		     	${phoneScrollPic.addTime!}
		     </div>
		</div>
		<input name="addTime" value="${phoneScrollPic.addTime?string('yyyy-MM-dd HH:mm:ss')}" type="hidden"/>
		<input name="picPath" value="${phoneScrollPic.picPath!}" type="hidden"/>
		<input name="addUser" value="${phoneScrollPic.addUser!}" type="hidden"/>
		<input name="addIp" value="${phoneScrollPic.addIp}" type="hidden"/>
		<input name="id" value="${phoneScrollPic.id}" type="hidden"/>

		<input name="scrollPicEditToken" value="${scrollPicEditToken!}" type="hidden">
	</form>
</div>


<!-- 图片预览-->
<script type="text/javascript">
	$(".fileshow").fancybox();
</script>
