<!DOCTYPE html>
<html>
<head>
<title>标信息</title>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<style>
.datagrid-body a{cursor:pointer;color:#0B83CA}
</style>
<script type="text/javascript">
    var dataGrid;
   
    $(function() {
        dataGrid = $('#tenderListGrid').datagrid({
            url : '/modules/loan/borrow/tenderDetailList.html?borrowId=${id}',
            fit : true,
            fitColumns : true,
            border : false,
            pagination : true,
            idField : 'id',
            pageSize : 10,
            pageNums :1,
            pageList : [ 10, 20, 30, 40, 50 ],
            checkOnSelect : false,
            selectOnCheck : false,
            nowrap : true,
			singleSelect:true,
			showFooter: true,
            columns : [ [
			  { field: 'borrowUserName', title: '借款人', width: 120, sortable:false },
			  { field: 'borrowTimeType', title: '标类', width: 50, sortable:false,formatter:function(value,row,index){
				  if(value == 0){
            		  return '月标';
            	  }else if(value == 1){
            		  return '天标';
            	  }
			  }},
			  { field: 'timeLimit', title: '借款期限', width: 50, sortable:false,formatter:function(value,row,index){
				  if(row.borrowTimeType == 0){
            		  return value+'个月';
            	  }else if(row.borrowTimeType == 1){
            		  return value+'天';
            	  }
			  }},
			  { field: 'userName', title: '投标人', width: 80, sortable:false },
			  { field: 'realName', title: '真实姓名', width: 80, sortable:false },
              { field: 'money', title: '投标金额', width: 80, sortable:false,formatter:function(value,row,index){
            	  return value+"元";
              }},  
              { field: 'account', title: '有效投标金额', width: 110, sortable:false,formatter:function(value,row,index){
            	  return value+"元";
              }},
             
              { field: 'repaymentAccount', title: '回收本息', width: 80, sortable:false,formatter:function(value,row,index){
            	  return value+"元";
              }},
              { field: 'tenderType', title: '投标类型', width: 80,fixed:true, sortable:false,formatter: function(value,row,index){
            	  if(value==0){
            		  return '网站投标';
            	  }else if(value==1){
            		  return '自动投标';
            	  }else if(value==2){
            		  return '手机投标';
            	  }
              } }, 
              { field: 'addTime', title: '投标时间', width: 150, sortable:false,fixed:true,formatter: function(value,row,index){
            	  return getLocalTime(value,4);
              	} 
              }, 
              { field: 'addIp', title: '投标IP', width: 120, sortable:false }
            
            ] ],
            toolbar : '#toolbar',
			onLoadSuccess : function() {
				$('#searchForm table').show();
				parent.$.messager.progress('close');
				$(this).datagrid('tooltip');
			}
        });
    });
  //借款管理中的excel导出
	function exportExcel(){
		var url = "/modules/loan/borrow/showTenderDetailExcel.html?borrowId=${id}";
		/* var userName = $("#userName").val();
		var name = $("#name").val();
		var dealNo = $("#dealNo").val();
		var type = $("#type").val();
		var status = $("#status").val();
		var startTime = $("#startTime").val();
		var vouchId = $("#vouchId").val();
		var endTime = $("#endTime").val();
		var sou = "?userName=" + userName + "&name=" + name + "&type=" + type + "&dealNo=" + dealNo + "&status=" + status + "&startTime=" + startTime + "&endTime=" + endTime + "&vouchId=" + vouchId;
		window.location.href = url + sou; */
		window.location.href = url;
	}
</script>

</head>
<div id="toolbar" >
		
		<a id="a" onclick="exportExcel();" href="javascript:void(0);" class="exportBtn">导出excel</a>
		
