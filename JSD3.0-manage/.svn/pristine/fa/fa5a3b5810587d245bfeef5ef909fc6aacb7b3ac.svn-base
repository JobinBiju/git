<script type="text/javascript">
	$(function() {
		$(".dialog-button").click(function(){
		    $(".panel-tool-close").click();
		});
	});
</script>
<body>

<div style="padding-top:50px;"><label class="lab" style="padding: 10px 0 0 50px;font-size:18px;color:#666;">信息内容：</label></div>
<div class="popForm sForm" >
	
	<div class="formitm" style="width:90%;">
		<div class="ipt">${notice.content!""}</div>
	</div>
	<div class="formitm" style="width:90%;">
		<div class="ipt" style="float:right;">添加时间：${notice.addTime?string("yyyy-MM-dd HH:mm:ss")!}</div>
		<br />
		<#if notice.receiveAddr??>
		<div class="ipt" style="float:right;">接收地址：${notice.receiveAddr!}&nbsp;&nbsp;</div>
		<#else>
		<div class="ipt" style="float:right;">接收地址：无&nbsp;&nbsp;</div>
		</#if>
	</div>
	
</div>

</body>
