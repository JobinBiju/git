
<script type="text/javascript">
$(function(){
	
	// 图片大小限制提示
	// 轮展图
	if($('#siteNid').val() == 'scrollPic'){	
		$('#a').html('<img src="${articleNew.picPath!}" title="${articleNew.title!}" style="width:1200px;height:250px;" ondragstart="return false">');
	}else{
		$('#a').html('<div style="height:100px;"></div><div tyle="width:100%;text-align:center;">该栏目暂无图片预览</div>');
	}
	
	//$(".formitm").parent(".dialog-content").css("background-color","#EFEFEF");
	$(".formitm").parent(".dialog-content").css("background","url('${theme_dir}/css/images/bj01.png')");
	
	
});
</script>


<!-- 图片预览 -->
<div class="formitm" style="text-align:center;">
	
	<input type="hidden" name="article" id="siteNid"  value="${siteNew.nid!}"/>
	
	<a id="a"></a>
</div>
